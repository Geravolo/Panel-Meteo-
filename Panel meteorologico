  <script>
    const urls = {
      'metar-sumu': 'https://aviacioncivil.mil.uy/opmet/data/metar/SUMU.xml',
      'taf-sumu': 'https://aviacioncivil.mil.uy/opmet/data/taf/SUMU.xml',
      'metar-saez': 'https://aviacioncivil.mil.uy/opmet/data/metar/SAEZ.xml',
      'taf-saez': 'https://aviacioncivil.mil.uy/opmet/data/taf/SAEZ.xml'
    };

    const proxy = 'https://api.allorigins.win/raw?url=';

    async function fetchAndDisplay(id, url) {
      try {
        const response = await fetch(proxy + encodeURIComponent(url));
        const text = await response.text();
        const parser = new DOMParser();
        const xml = parser.parseFromString(text, 'application/xml');
        const metData = xml.querySelector('data').textContent.trim();
        document.getElementById(id).textContent = metData;
      } catch (error) {
        document.getElementById(id).textContent = 'Error al cargar';
      }
    }

    function updateAll() {
      for (const id in urls) {
        fetchAndDisplay(id, urls[id]);
      }
    }

    updateAll();
    setInterval(updateAll, 3600000); // 1 hora
  </script>
